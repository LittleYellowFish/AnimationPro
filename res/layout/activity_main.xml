<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.animotionpro.MainActivity" >

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:gravity="top"
        android:onClick="onClick"
        android:text="@string/hello_world"
        android:visibility="gone" />

    <com.example.animotionpro.CustomView
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:gravity="top"
        android:onClick="onClick2"
        android:text="@string/hello_world"
        android:visibility="gone" />

    <Button
        android:id="@+id/view2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/scale_d"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onClick3"
        android:text="@string/hello_world"
        android:visibility="gone" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/timg"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/scale_d"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/tv_level"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="onlevelClick"
        android:src="@drawable/level_list_d"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/clip_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClipClick"
        android:src="@drawable/clip_d"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_scale"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/darker_gray"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onScaleClick"
        android:text="hello"
        android:visibility="gone" />

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff4f7f9"
        android:cacheColorHint="#00000000"
        android:divider="#dddbdb"
        android:dividerHeight="1dp"
        android:layoutAnimation="@anim/anim_layout"
        android:listSelector="@android:color/transparent"
        android:visibility="gone" >
    </ListView>

    <TextView
        android:id="@+id/btn_property"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="100dp"
        android:background="@android:color/darker_gray"
        android:clickable="true"
        android:onClick="onPropertyClick"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_width"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="onWidthClick"
        android:clickable="true"
        android:background="@android:color/darker_gray" />

</LinearLayout>